{
    "name": "pyrocms/pyrocms",
    "description": "PyroCMS is a powerful, easy to use CMS built for everyone.",
    "type": "project",
    "keywords": [
        "pyrocms",
        "cms",
        "streams",
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "PyroCMS, Inc.",
            "email": "support@pyrocms.com"
        },
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "anomaly/streams-composer-plugin": "~1.1",
        "anomaly/streams-platform": "dev-1.0/develop",
        "anomaly/default_authenticator-extension": "~2.0",
        "anomaly/throttle_security_check-extension": "~2.0",
        "anomaly/local_storage_adapter-extension": "~2.0",
        "anomaly/default_page_handler-extension": "~2.0",
        "anomaly/user_security_check-extension": "~2.0",
        "anomaly/xml_feed_widget-extension": "~2.0",
        "anomaly/page_link_type-extension": "~2.0",
        "anomaly/url_link_type-extension": "~2.0",
        "anomaly/relationship-field_type": "~2.0",
        "anomaly/colorpicker-field_type": "~2.0",
        "anomaly/polymorphic-field_type": "~2.0",
        "anomaly/checkboxes-field_type": "~2.0",
        "anomaly/encrypted-field_type": "~2.0",
        "anomaly/datetime-field_type": "~2.0",
        "anomaly/language-field_type": "~2.0",
        "anomaly/multiple-field_type": "~2.0",
        "anomaly/textarea-field_type": "~2.0",
        "anomaly/wysiwyg-field_type": "~2.0",
        "anomaly/boolean-field_type": "~2.0",
        "anomaly/country-field_type": "~2.0",
        "anomaly/decimal-field_type": "~2.0",
        "anomaly/markdown-field_type": "~2.0",
        "anomaly/integer-field_type": "~2.0",
        "anomaly/editor-field_type": "~2.0",
        "anomaly/select-field_type": "~2.0",
        "anomaly/slider-field_type": "~2.0",
        "anomaly/addon-field_type": "~2.0",
        "anomaly/email-field_type": "~2.0",
        "anomaly/state-field_type": "~2.0",
        "anomaly/files-field_type": "~2.0",
        "anomaly/tags-field_type": "~2.0",
        "anomaly/slug-field_type": "~2.0",
        "anomaly/text-field_type": "~2.0",
        "anomaly/file-field_type": "~2.0",
        "anomaly/url-field_type": "~2.0",
        "anomaly/configuration-module": "~2.0",
        "anomaly/preferences-module": "~2.0",
        "anomaly/navigation-module": "~2.0",
        "anomaly/dashboard-module": "~2.0",
        "anomaly/redirects-module": "~2.0",
        "anomaly/installer-module": "~2.0",
        "anomaly/variables-module": "~2.0",
        "anomaly/settings-module": "~2.0",
        "anomaly/search-module": "~2.0",
        "anomaly/addons-module": "~2.0",
        "anomaly/users-module": "~2.0",
        "anomaly/pages-module": "~2.0",
        "anomaly/posts-module": "~2.0",
        "anomaly/files-module": "~2.0",
        "anomaly/contact-plugin": "~1.0",
        "anomaly/request-plugin": "~2.0",
        "anomaly/helper-plugin": "~2.0",
        "pyrocms/starter-theme": "dev-master",
        "pyrocms/pyrocms-theme": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-3.0/develop": "3.0.x-dev"
        }
    },
    "prefer-stable": true
}
